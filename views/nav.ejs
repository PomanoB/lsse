				<a href="/page/about" <%if (view == "about") {%> class="current" <%}%> ><%= lingua.nav.about %></a>
			</li>
		</ul>
</nav>
<script>
	$(function(){
		if (currentPage == "images_search")
		{
			$('#switch_images').hide();
			$('#switch_secondary_links').hide();
		}

	});
</script>