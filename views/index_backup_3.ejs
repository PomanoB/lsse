									selectEle.options[i].selected = true;
									selected_model = model_val;
								}
								} else if(selectEle.options[i].text == model_val){
								selectEle.options[i].selected = true;
								selected_model = model_val;
							}
						}
					}
					return;
				}
							
			</script>
			
